# MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017

# Database name
DATABASE_NAME=gcdserver

# Server port
SERVER_PORT=8080

# Log level
RUST_LOG=info

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# Keycloak OpenID Connect Configuration
# These are the most important values to configure for Keycloak
KEYCLOAK_ISSUER_URL=http://localhost:8080/auth/realms/master
KEYCLOAK_CLIENT_ID=gcdserver-api
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret
KEYCLOAK_REDIRECT_URI=http://localhost:8080/auth/callback

# Optional: Legacy OAuth2 configuration (if not using Keycloak)
# OAUTH2_PROVIDER=google
# OAUTH2_CLIENT_ID=your-client-id.apps.googleusercontent.com
# OAUTH2_CLIENT_SECRET=your-client-secret
